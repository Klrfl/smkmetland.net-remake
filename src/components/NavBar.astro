---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import logo from "../assets/metland-logo.png";
import { getCollection } from "astro:content";

interface SocialLink {
  url: string;
  label: string;
  icon: string;
}

const socialLinks: SocialLink[] = [
  {
    url: "https://api.whatsapp.com/send/?phone=6281293395500&text&type=phone_number&app_absent=0",
    label: "Whatsapp SMK Metland",
    icon: "mdi:whatsapp",
  },
  {
    url: "https://www.instagram.com/smkmetland/",
    label: "Instagram SMK Metland",
    icon: "mdi:instagram",
  },
  {
    url: "https://id-id.facebook.com/SMKMetland/",
    label: "Facebook SMK Metland",
    icon: "mdi:facebook",
  },
  {
    url: "https://www.youtube.com/channel/UCrxrH9tASSF3FNez-fTMKZA",
    label: "YouTube SMK Metland",
    icon: "mdi:youtube",
  },
];

const programKeahlian = await getCollection("program-keahlian");
const kurikulum = await getCollection("kurikulum");
---

<header>
  <section class="logo">
    <a href="/">
      <Image src={logo} alt="logo SMK Metland" />
    </a>
  </section>

  <nav class="socials" id="secondary-nav">
    {
      socialLinks.map(({ url, label, icon }) => (
        <a href={url} aria-label={label} target="_blank">
          <Icon size={20} name={icon} />
        </a>
      ))
    }
    <button id="open-nav" title="open navigation">
      <Icon name="mdi:hamburger-menu" />
    </button>
  </nav>

  <nav class="main-nav" id="main-nav">
    <div class="nav-header">
      <div class="logo">
        <Image src={logo} alt="logo SMK Metland" />
      </div>
      <button id="close-nav" title="close navigation">
        <Icon name="mdi:close" />
      </button>
    </div>
    <ul>
      <li><a href="/tentang-sekolah">Tentang sekolah</a></li>

      <li>
        <button>
          <span>Program Keahlian</span>
          <Icon name="mdi:menu-down" />
        </button>

        <ul class="main-nav__sub-menu">
          {
            programKeahlian.map((program) => (
              <li>
                <a href={`/program-keahlian/${program.id}`}>
                  {program.data.title}
                </a>
              </li>
            ))
          }
        </ul>
      </li>
      <li>
        <button>
          <span>Kurikulum</span>
          <Icon name="mdi:menu-down" />
        </button>
        <ul class="main-nav__sub-menu">
          <li><a href="#">Kurikulum operasional sekolah</a></li>
          {
            kurikulum.map((kurikulum) => (
              <li>
                <a href={`/kurikulum/${kurikulum.slug}`}>
                  {kurikulum.data.title}
                </a>
              </li>
            ))
          }
        </ul>
      </li>

      <li><a href="/berita-sekolah/1">Berita Sekolah</a></li>
      <li><a href="/ppdb">PPDB</a></li>
      <li><a href="/bkk">BKK</a></li>
      <li><a href="https://lpk.smkmetland.net">LPK</a></li>
    </ul>
  </nav>
</header>

<style lang="scss">
  @use "../styles/abstracts/" as *;
  header {
    background: var(--accent);
    color: var(--white-dark);
    padding: 1rem 2rem;
    position: sticky;
    top: 0;
    min-width: 100%;
    user-select: none;

    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;

    a {
      color: inherit;
      text-decoration: none;
    }

    a:hover,
    button:hover {
      color: var(--text-color-hover);
    }
  }

  #secondary-nav {
    display: flex;

    justify-content: flex-end;
    align-items: center;

    a {
      padding: 1rem;
    }
  }

  #open-nav {
    margin-left: 1rem;
  }

  #main-nav {
    background: #000a;
    backdrop-filter: blur(0.5rem);
    position: absolute;
    inset: 0 0 auto;
    min-height: 100vh;

    transform: translateY(-100%);
    transition:
      transform 200ms ease,
      visibility 200ms ease;

    &.active {
      transform: translate(0);
      visibility: visible;
    }

    & > ul {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    // including the submenus
    ul {
      margin: 0;
      padding: 0;
      list-style: none;
    }

    & > ul > li {
      background: #222;
      display: flex;
      flex-direction: column;
      position: relative;
    }

    li a,
    li button {
      padding: 1rem 2rem;
      display: block;
      width: 100%;
    }

    li button {
      display: flex;
      gap: 0.5rem;
    }

    .main-nav__sub-menu {
      background: #333;
      max-height: 0;
      overflow: hidden;
      transition:
        max-height 200ms ease,
        visibility 200ms ease,
        opacity 200ms ease;
      visibility: hidden;
      opacity: 0;

      li {
        border-bottom: 2px solid #444;
      }
      &.active {
        max-height: 25rem;
        opacity: 1;
        visibility: visible;
      }
    }
  }

  .nav-header {
    display: flex;
    justify-content: space-between;
    padding: 1rem 2rem;

    & > * {
      padding: 1rem 0;
    }
  }

  @media screen and (min-width: 60em) {
    header {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
    }

    #secondary-nav {
      grid-column: span 6 / -1;
    }

    #main-nav {
      background: transparent;
      backdrop-filter: none;
      position: relative;
      min-height: max-content;

      grid-column: 1 / -1;

      transform: none;

      & > ul {
        flex-direction: row;
        justify-content: flex-end;
        align-items: center;
        gap: unset;

        li {
          background: transparent;
        }
      }

      li a,
      li button {
        padding: 1rem;
        &:hover {
          background: #333;
        }
      }

      .main-nav__sub-menu {
        position: absolute;
        top: 0;
        width: max-content;
        transform: translateY(3rem);
        opacity: 0;

        &:hover {
          max-height: 25rem;
          opacity: 1;
          visibility: visible;
        }
      }
    }

    #main-nav button:hover + .main-nav__sub-menu {
      max-height: 25rem;
      opacity: 1;
      visibility: visible;
    }

    .nav-header,
    #open-nav {
      display: none;
    }
  }
</style>
